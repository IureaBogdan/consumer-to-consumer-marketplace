@model ViewModels.Offer.OfferDetailsViewModel

@{
    ViewBag.Title = "Offer: "+Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container pt-1">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach (var imageLink in Model.Images)
            {
                int index = Model.Images.IndexOf(imageLink);
                <li data-target="#carouselExampleIndicators" data-slide-to="@index"></li>
            }
        </ol>
        <div class="carousel-inner">
            @foreach (var imageLink in Model.Images)
            {
                int index = Model.Images.IndexOf(imageLink);
                if (index == 0)
                {
                    <div class="carousel-item active">
                        <img src="@imageLink" class="d-block w-100" height="600" alt="@imageLink">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="@imageLink" class="d-block w-100" height="600" alt="@imageLink">
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <h2>@Model.Title</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)$
        </dd>

        <dt>
            Seller name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SellerName)
        </dd>

        <dt>
            Seller phone number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SellerPhoneNumber)
        </dd>

        <dt>
            Seller email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SellerEmail)
        </dd>

        <dt>
            Date when posted
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>
